<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/food_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food information" />

        <TextView
            android:id="@+id/label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label" />

        <TextView
            android:id="@+id/nutrients_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrients" />

        <TextView
            android:id="@+id/brand_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand" />

        <TextView
            android:id="@+id/category_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category" />

        <TextView
            android:id="@+id/food_contents_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food contents" />

        <ImageView
            android:id="@+id/food_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

    </LinearLayout>

</ScrollView>
